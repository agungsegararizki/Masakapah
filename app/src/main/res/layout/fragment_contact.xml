<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Setting.ContactFragment"
    android:background="@drawable/shape_putih_border_oren">

    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Me"
        style="@style/Monserat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_github"
        style="@style/btnstyle2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_contact"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="24dp"
        android:drawableLeft="@drawable/logo_github"
        android:paddingStart="10dp"
        android:text="Github"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gmail"
        style="@style/btnstyle2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_github"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:drawableLeft="@drawable/logo_gmail"
        android:paddingStart="10dp"
        android:text="Email"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>